@model MyFirstMVC.Models.BlogIndexViewModel

<div class="row">
@foreach(var article in Model.Articles)
{
    <div class="col-12 col-md-4">
        <div class="card mb-4">
            <div class="card-header">
                <h3 class="card-title">@article.Title</h3>
            </div>
            <div class="card-body">
                @article.Content
            </div>
        </div>    
    </div>
}
</div>